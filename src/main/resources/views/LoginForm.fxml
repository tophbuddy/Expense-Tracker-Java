<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.expensetrackerjava.controller.LoginFormController"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@../css/LoginForm.css"/>
    </stylesheets>

    <VBox alignment="CENTER"
          layoutX="177.0"
          layoutY="74.0"
          prefHeight="252.0"
          prefWidth="245.0"
          spacing="10.0"
    >
        <children>
            <Label>
                <font>
                    <Font size="24.0"/>
                </font>
            </Label>
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <children>
                    <Label text="Username: "/>
                    <Label text="Password: " GridPane.rowIndex="1"/>
                    <TextField fx:id="usernameField" GridPane.columnIndex="1"/>
                    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                </children>
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <padding>
                        <Insets right="10"/>
                    </padding>
                    <children>
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" text="Login"/>
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" text="Register"/>
                    </children>
                </HBox>
            </GridPane>
        </children>

    </VBox>

</AnchorPane>